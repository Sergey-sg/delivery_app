{% extends "base.jinja2" %}

{% block title %}{{_('New Password')}}{% endblock title %}

{% block content %}
    {% if validlink %}
        <div class="container padding-form">
            <p>{{_('Please enter (and confirm) your new password.')}}</p>
            <form action="" method="post">
                {% csrf_token %}
                <table>
                  {% if form.errors %}
                    <p class="text-danger">{{ form.errors }}</p>
                  {% endif %}
                  {{ crispy(form) }}
                </table>
                <br>
                <input type="submit" class="btn btn-primary" value="{{ _('save password') }}">
            </form>
        </div>
    {% else %}
        <h1>{{ _('Password reset failed') }}</h1>
        <p>{{ _('The password reset link is invalid, possibly because it has already been used. Please request a new password reset.') }}</p>
    {% endif %}

    <script src="{{ static ('script/password_open.js') }}"></script>
{% endblock %}