{% extends "base.jinja2" %}

{% block title %}{{_('Create an account')}}{% endblock title %}

{% block content %}

<div class="container padding-form">
    <form action="" method="post" enctype="multipart/form-data">
        {% csrf_token %}
        <table>
            {{ form.as_p() }}
        </table>
        <input class="btn btn-primary" type="submit" value="{{ _('register an account') }}" />
    </form>
</div>

{% endblock content %}