{% extends "base.jinja2" %}

{% block title %}{{_('Новый пароль')}}{% endblock title %}

{% block content %}

    {% if validlink %}
        <p>{{_('Пожайлуста введите (и подтвердите) ваш новый пароль.')}}</p>
        <form action="" method="post">
            {% csrf_token %}
            <table>
                <tr>
                    {{ form.new_password1.errors }}
                    <td><label for="register-password1-input">{{ _('Новый пароль') }}:</label></td>
                    <td><input id="register-password1-input" type="password" name="new_password1" autocomplete="new-password">
                        <label><input type="checkbox" class="register-password1-checkbox"> {{ _('показать пароль')}}</label>
                        <br>
                    </td>
                </tr>
                <tr>
                    {{ form.new_password2.errors }}
                    <td><label for="register-password2-input">{{ _('Подтвердить пароль') }}:</label></td>
                    <td><input id="register-password2-input" type="password" name="new_password2" autocomplete="new-password">
                        <label><input type="checkbox" class="register-password2-checkbox"> {{ _('показать пароль')}}</label>
                        <br>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" class="btn btn-primary" value="{{ _('сохранить пароль') }}" /></td>
                </tr>
            </table>
        </form>
    {% else %}
        <h1>{{ _('Сброс пароля не удался') }}</h1>
        <p>{{ _('Ссылка для сброса пароля недействительна, возможно, потому, что она уже использовалась. Пожалуйста, запросите сброс нового пароля.') }}</p>
    {% endif %}

<script src="https://bootstraptema.ru/plugins/jquery/jquery-1.11.3.min.js"></script>
<script src="{{ static ('script/script.js') }}"></script>

{% endblock %}