{% extends "base.jinja2" %}

{% block title %}{{_('New Password')}}{% endblock title %}

{% block content %}

    {% if validlink %}
        <p>{{_('Please enter (and confirm) your new password.')}}</p>
        <form action="" method="post">
            {% csrf_token %}
            <table>
                <tr>
                    {{ form.new_password1.errors }}
                    <td><label for="register-password1-input">{{ _('New Password') }}:</label></td>
                    <td><input id="register-password1-input" type="password" name="new_password1" autocomplete="new-password">
                        <label><input type="checkbox" class="register-password1-checkbox"> {{ _('show password')}}</label>
                        <br>
                    </td>
                </tr>
                <tr>
                    {{ form.new_password2.errors }}
                    <td><label for="register-password2-input">{{ _('Confirm password') }}:</label></td>
                    <td><input id="register-password2-input" type="password" name="new_password2" autocomplete="new-password">
                        <label><input type="checkbox" class="register-password2-checkbox"> {{ _('show password')}}</label>
                        <br>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" class="btn btn-primary" value="{{ _('save password') }}" /></td>
                </tr>
            </table>
        </form>
    {% else %}
        <h1>{{ _('Password reset failed') }}</h1>
        <p>{{ _('The password reset link is invalid, possibly because it has already been used. Please request a new password reset.') }}</p>
    {% endif %}

<script src="https://bootstraptema.ru/plugins/jquery/jquery-1.11.3.min.js"></script>
<script src="{{ static ('script/script.js') }}"></script>

{% endblock %}